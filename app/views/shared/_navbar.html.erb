<div class="font-semibold uppercase tracking-wider">
  <% if !user_signed_in? %>
      <span class="mx-2 hover:text-gray-600"><%= link_to "Log in", new_user_session_path %></span>
      <span class="mx-2 hover:text-gray-600"><%= link_to "Sign up", new_user_registration_path %></span>
  <% else %>
      <span class="mx-2 hover:text-gray-600"><%= link_to "Log out", destroy_user_session_path, method: :delete %></span>
  <% end %>
</div>  
