<div id="tasklist" class="mt-8 table">
  <div id="task-header" class="table-header-group font-bold text-center">
    <span class="table-cell">Task</span>
    <span class="table-cell">Completed</span>
    <span class="table-cell">Age</span>
  </div>
  <div id="task-items" class="table-row-group">
    <% @tasks.each do |task| %>
      <%= content_tag :div, id: dom_id(task), class: "table-row" do %>
        <div class="<%= class_names(completed: task.completed?) %> table-cell"><%= task.name %></div>
        <div class="table-cell"><%= check_box_tag(dom_id(task, :toggle), nil, task.completed?, data: { reflex: "click->Example#toggle", id: task.id }) %></div>
        <div class="table-cell"><%= time_ago_in_words task.created_at %></div>
        <div class="table-cell"><%= link_to 'Edit', edit_task_path(task) %></div>
        <div class="table-cell"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <% end %>
    <% end %>
  </div>
</div>
