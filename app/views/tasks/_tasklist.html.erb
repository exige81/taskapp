<div id="tasklist" class="mt-8 table">
  <div id="task-header" class="table-header-group font-bold text-center">
    <span class="table-cell">Task</span>
    <span class="table-cell">Completed</span>
    <span class="table-cell">Age</span>
  </div>
  <div id="task-items" class="table-row-group ">
    <% @tasks.each do |task| %>
      <%= content_tag :div, id: dom_id(task), class: "table-row task-rows" do %>
        <div class="<%= class_names(completed: task.completed?) %> table-cell text-2xl font-light pl-2"><%= task.name %></div>
        <div class="table-cell pl-2 align-middle">
          <%= check_box_tag(dom_id(task, :toggle), nil, task.completed?, class: "form-checkbox h-6 w-6 rounded", data: { reflex: "click->Example#toggle", id: task.id }) %>
        </div>
        <div class="table-cell pl-2 text-sm font-medium"><%= time_ago_in_words task.created_at %></div>
        <div class="table-cell pl-2"><%= link_to 'Edit', edit_task_path(task) %></div>
        <div class="table-cell pl-2"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <% end %>
    <% end %>
  </div>
</div>
